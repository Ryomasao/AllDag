//- トップページ画面
extends ./template/_layout.pug
include ./components/_error.pug

block contents
    form(method="post",action="/form_sample")
        span {{csrf_field()}}
        h1 シンプルなPOST 
        br
        label(for="name") 好きなメンバー
        select(name="name")
            option あやね
            option みりん
            option りさ
        +error('name')
        br
        label(for="beauty") 好きなところ
        input(type="text" name="beauty")
        +error('beauty')
        br
        label(for="request") やってほしいこと
        input(type="text" name="request")
        +error('request')
        br
        button PushMe

    .result
        span @isset($message)
        p {{ $message }}
        span @endisset

    .box1(style="width:100px;height:100px;background:yellow;margin:10px;" @click="greet" v-bind:style="styleObject")
    .box2(style="width:100px;height:100px;background:red;margin:10px;")
    .box3(style="width:100px;height:100px;background:blue;margin:10px;")
    script(src="/js/form_sample.js")
    
        