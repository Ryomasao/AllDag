//- トップページ画面
extends ./template/_layout.pug
include ./components/_error.pug

block contents
    form(method="post",action="/form_sample")
        span {{csrf_field()}}
        h1 シンプルなPOST 
        br
        label(for="name") 好きなメンバー
        select(name="name")
            option あやね
            option みりん
            option りさ
        +error('name')
        br
        label(for="beauty") 好きなところ
        input(type="text" name="beauty")
        +error('beauty')
        br
        label(for="request") やってほしいこと
        input(type="text" name="request")
        +error('request')
        br
        button PushMe

    .result
        span @isset($message)
        p {{ $message }}
        span @endisset

    .box1(@click="moveRight" v-bind:style="styleObject") あ
    .box2(@click="sayhello" v-bind:style="styleObject") い
    .box3
    script(src="/js/form_sample.js")

    style().
        .box1{
            width:100px;
            height:100px;
            background:yellow;
            margin:10px
        }

        .box2{
            width:100px;
            height:100px;
            background:red;
            margin:10px
        }
    
        .box3{
            width:100px;
            height:100px;
            background:blue;
            margin:10px
        }
        